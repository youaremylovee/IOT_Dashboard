                        <th>AverageAcc</th>
                        <th>AverageRo</th>
                        <th>AccSD</th>
                        <th>GyroSD</th>
                      </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Time</td>
                                <td>@item.Status</td>
                                <td>@item?.ItemInfo?.AverageAcc</td>
                                <td>@item?.ItemInfo?.AverageRo</td>
                                <td>@item?.ItemInfo?.AccSD</td>
                                <td>@item?.ItemInfo?.GyroSD</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot></tfoot>
                  </table>
                </div>
                <!-- /.box-body -->
