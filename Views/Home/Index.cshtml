    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <!-- page script -->
    <script>
      $(function () {
        var table = $("#example2").DataTable({
          paging: true,
          lengthChange: false,
          searching: false,
          ordering: true,
          info: true,
          autoWidth: false,
        });
        //Date range time picker
        $("#reservationtime").daterangepicker();
        
         // 1. Kết nối SignalR Hub
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chart")
            .build();

        // 2. Khởi động kết nối
        connection.start()
            .then(() => console.log("Connected to SignalR hub"))
            .catch(err => console.error("Connection failed: ", err));

        function convertDate(isoDate) {
            // Chuyển đổi chuỗi thời gian thành đối tượng Date
            const date = new Date(isoDate);

            // Định dạng ngày tháng năm
            const month = String(date.getMonth() + 1).padStart(2, '0'); // Tháng (1-12)
            const day = String(date.getDate()).padStart(2, '0'); // Ngày
            const year = date.getFullYear(); // Năm

            // Định dạng giờ phút giây
            let hours = date.getUTCHours();
            const minutes = String(date.getMinutes()).padStart(2, '0'); // Phút
            const seconds = String(date.getSeconds()).padStart(2, '0'); // Giây

            // Xác định AM/PM
            const ampm = hours >= 12 ? 'PM' : 'AM';
            hours = hours % 12; // Chuyển đổi sang định dạng 12 giờ
            hours = hours ? String(hours).padStart(2, '0') : '12'; // Nếu là 0, chuyển thành 12

            // Kết hợp thành chuỗi thời gian theo định dạng yêu cầu
            return `${month}/${day}/${year} ${hours}:${minutes}:${seconds} ${ampm}`;
        }

        // 3. Lắng nghe sự kiện từ server
        connection.on("UpdateChart", (data) => {
            if (data.trang_thai == "calculating") {
                return;
            }
            var row = table.row.add([
                convertDate(data.thoi_gian),
                data.trang_thai,
                data.gia_tri.averageAcc,
                data.gia_tri.averageRo,
                data.gia_tri.accSD,
                data.gia_tri.gyroSD
            ]).draw();
            if(data.trang_thai === '@(config.AlertLevel)'){
                var rowNode = row.node();
                $(rowNode).addClass("cl-r");
            }
        });
       
      });
    </script>
